<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Listing Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="7dp"
        android:id="@+id/listing_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Leanback.FormWizard.Medium"
        android:textSize="28sp" />

    <TextView
        android:text="Listing Tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/listing_tags"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_below="@+id/listing_title"
        android:layout_alignLeft="@+id/listing_title"
        android:layout_alignStart="@+id/listing_title" />

    <TextView
        android:text="Listing Timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/listing_timings"
        android:textSize="20sp"
        android:layout_below="@+id/listing_tags"
        android:layout_alignLeft="@+id/listing_tags"
        android:layout_alignStart="@+id/listing_tags"
        android:layout_marginBottom="12dp" />
</RelativeLayout>