<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r_emergency"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="kkmp.sharktank.R_Emergency"
    android:orientation="horizontal"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/greenbar"
        android:id="@+id/banner"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/decline_call"
        android:id="@+id/cancel"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bannerText"
        android:layout_alignEnd="@+id/bannerText"
        android:onClick="clickedButton_cancel"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/accept_call"
        android:id="@+id/call"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bannerText"
        android:layout_alignStart="@+id/bannerText"
        android:onClick="clickedButton_call"
        android:clickable="true" />

    <TextView
        android:text="   Calling Contact in 5..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bannerText"
        android:textColor="@android:color/background_light"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="First Last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/banner"
        android:layout_alignLeft="@+id/call"
        android:layout_alignStart="@+id/call" />

    <TextView
        android:text="email@mail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/email"
        android:textSize="25sp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:text="###-###-####"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:textSize="35sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

</RelativeLayout>
