<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Request Title"
        android:ems="10"
        android:id="@+id/title_field"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/other_box"
        android:layout_alignLeft="@+id/timings_field"
        android:layout_alignStart="@+id/timings_field"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Timings"
        android:ems="10"
        android:id="@+id/timings_field"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/comments_field"
        android:layout_alignLeft="@+id/tags_title"
        android:layout_alignStart="@+id/tags_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Comments"
        android:ems="10"
        android:id="@+id/comments_field"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/post_button"
        android:layout_alignLeft="@+id/timings_field"
        android:layout_alignStart="@+id/timings_field"
        android:layout_marginBottom="55dp" />

    <CheckBox
        android:text="Medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_box"
        android:textSize="25sp"
        android:layout_below="@+id/groceries_box"
        android:layout_alignLeft="@+id/groceries_box"
        android:layout_alignStart="@+id/groceries_box" />

    <CheckBox
        android:text="Groceries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groceries_box"
        android:textSize="25sp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tags_title"
        android:layout_alignLeft="@+id/tags_title"
        android:layout_alignStart="@+id/tags_title" />

    <CheckBox
        android:text="Meals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meals_box"
        android:textSize="25sp"
        android:layout_below="@+id/medicine_box"
        android:layout_alignLeft="@+id/medicine_box"
        android:layout_alignStart="@+id/medicine_box" />

    <CheckBox
        android:text="Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_box"
        android:textSize="25sp"
        android:layout_below="@+id/meals_box"
        android:layout_alignLeft="@+id/meals_box"
        android:layout_alignStart="@+id/meals_box" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:id="@+id/post_button"
        android:textSize="20sp"
        android:textColor="#FCFAFA"
        android:background="@drawable/r_make_request_button"
        android:onClick="clickedButton_post"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/groceries_box"
        android:layout_toEndOf="@+id/groceries_box"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="23dp"
        android:id="@+id/tags_title"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>