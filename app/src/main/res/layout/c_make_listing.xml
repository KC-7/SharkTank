<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kkmp.sharktank.C_Make_Listing">

    <TextView
        android:text="Tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:id="@+id/tags_text"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_box"
        android:layout_below="@+id/groceries_box"
        android:layout_alignLeft="@+id/groceries_box"
        android:layout_alignStart="@+id/groceries_box"
        android:textSize="25sp" />

    <CheckBox
        android:text="Meals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meals_box"
        android:layout_below="@+id/medicine_box"
        android:layout_alignLeft="@+id/medicine_box"
        android:layout_alignStart="@+id/medicine_box"
        android:textSize="25sp" />

    <CheckBox
        android:text="Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_box"
        android:layout_below="@+id/meals_box"
        android:layout_alignLeft="@+id/meals_box"
        android:layout_alignStart="@+id/meals_box"
        android:textSize="25sp" />

    <CheckBox
        android:text="Groceries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groceries_box"
        android:textSize="25sp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tags_text"
        android:layout_alignLeft="@+id/tags_text"
        android:layout_alignStart="@+id/tags_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Listing Title"
        android:ems="10"
        android:id="@+id/title_field"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/other_box"
        android:layout_alignLeft="@+id/tags_text"
        android:layout_alignStart="@+id/tags_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Timings"
        android:ems="10"
        android:id="@+id/timings_field"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/title_field"
        android:layout_alignLeft="@+id/title_field"
        android:layout_alignStart="@+id/title_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Comments"
        android:ems="10"
        android:id="@+id/comments_field"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/timings_field"
        android:layout_alignLeft="@+id/timings_field"
        android:layout_alignStart="@+id/timings_field" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:id="@+id/post_button"
        android:textSize="20sp"
        android:textColor="#FCFAFA"
        android:background="@drawable/c_dashboard_button"
        android:onClick="clickedButton_post"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/comments_field"
        android:layout_alignEnd="@+id/comments_field" />

</RelativeLayout>