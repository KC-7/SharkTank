<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r_notifications"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kkmp.sharktank.R_Updates">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/status"
        android:textSize="25sp"
        android:text="Loading..."
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/youCanContactAt"
        android:layout_alignEnd="@+id/youCanContactAt" />

    <TextView
        android:text="Contact Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_info"
        android:textSize="20sp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/name_age_gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:text="And their contact info is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youCanContactAt"
        android:textSize="29sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/name_age_gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="View Your Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewRequest"
        android:background="@drawable/r_view_request_button"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="clickedButton_viewRequest" />

    <TextView
        android:text="Your caregiver is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/yourCaregiverIs"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="First Last, Age #, Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_age_gender"
        android:textSize="20sp"
        android:textStyle="normal|italic"
        android:layout_marginTop="21dp"
        android:visibility="visible"
        android:layout_below="@+id/yourCaregiverIs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
