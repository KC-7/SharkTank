<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Emergency Contact Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/title_text"
        android:textSize="23sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First name"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/firstname_E"
        android:layout_below="@+id/title_text"
        android:layout_alignLeft="@+id/title_text"
        android:layout_alignStart="@+id/title_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last name"
        android:ems="10"
        android:id="@+id/lastname_E"
        android:layout_below="@+id/firstname_E"
        android:layout_alignLeft="@+id/firstname_E"
        android:layout_alignStart="@+id/firstname_E" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/email_E"
        android:layout_below="@+id/lastname_E"
        android:layout_alignLeft="@+id/lastname_E"
        android:layout_alignStart="@+id/lastname_E"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:ems="10"
        android:id="@+id/phone_E"
        android:inputType="phone"
        android:layout_below="@+id/email_E"
        android:layout_alignLeft="@+id/email_E"
        android:layout_alignStart="@+id/email_E" />


    <TextView
        android:hint="This person will be contacted in the case of an emergency. Additionally, you can quickly call them yourself through the Dashboard's Emergency button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/footer_text"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/phone_E"
        android:layout_alignStart="@+id/phone_E" />

    <Button
        android:text="Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/finish_button"
        android:textSize="22sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/r_view_request_button"
        android:onClick = "clickedButton_finish"
        android:layout_above="@+id/footer_text"
        android:layout_alignRight="@+id/title_text"
        android:layout_alignEnd="@+id/title_text" />


</RelativeLayout>