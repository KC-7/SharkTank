<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Emergency Contact Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/title_text"
        android:textSize="23sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First name"
        android:ems="10"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:id="@+id/firstname_field"
        android:layout_below="@+id/title_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:ems="10"
        android:id="@+id/email_field"
        android:layout_below="@+id/lastname_field"
        android:layout_alignLeft="@+id/lastname_field"
        android:layout_alignStart="@+id/lastname_field"
        android:inputType="textEmailAddress" />

    <TextView
        android:text="*Your family will be contacted during an emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/footer_text"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/finish_button"
        android:layout_alignStart="@+id/finish_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last name"
        android:ems="10"
        android:id="@+id/lastname_field"
        android:layout_below="@+id/firstname_field"
        android:layout_alignLeft="@+id/firstname_field"
        android:layout_alignStart="@+id/firstname_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:ems="10"
        android:id="@+id/phone_field"
        android:inputType="phone"
        android:layout_below="@+id/email_field"
        android:layout_alignLeft="@+id/email_field"
        android:layout_alignStart="@+id/email_field" />

    <Button
        android:text="Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/finish_button"
        android:textSize="22sp"
        android:onClick = "clickedButton_finish"
        android:layout_above="@+id/footer_text"
        android:layout_alignRight="@+id/title_text"
        android:layout_alignEnd="@+id/title_text" />
</RelativeLayout>